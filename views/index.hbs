<!DOCTYPE html>
<html lang="es">

{{>head}}

<body>
    {{!-- Barra de busqueda --}}
    <nav class="navbar bg-body-tertiary my-5 ">
        <div class=" w-75 mx-auto">
            <form class="" role="search">

                <div class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Busqueda" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Buscar</button>
                </div>

                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                            value="option1">
                        <label class="form-check-label" for="inlineRadio1">id</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                            value="option1">
                        <label class="form-check-label" for="inlineRadio1">titulo</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                            value="option1">
                        <label class="form-check-label" for="inlineRadio1">artista</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                            value="option1">
                        <label class="form-check-label" for="inlineRadio1">tono</label>
                    </div>
                </div>
            </form>
        </div>
    </nav>

    {{!-- Tabla de Canciones --}}

    <table class="table container" >
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Artista</th>
                    <th scope="col">Tono</th>
                </tr>
            </thead>
            <tbody>

                {{#each canciones}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this.titulo}}</td>
                    <td>{{this.artista}}</td>
                    <td>{{this.tono}}</td>
                </tr>
                {{/each}}
            </tbody>
    </table>



</body>
</html>