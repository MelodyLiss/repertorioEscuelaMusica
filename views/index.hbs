<!DOCTYPE html>
<html lang="es">

{{>head}}

<body>
    {{!-- Barra de busqueda --}}
    <nav class="navbar bg-body-tertiary my-5 ">
        <div class=" w-75 mx-auto">
            <form class="" role="search" action="/repertorio/buscar" >

                <div class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Busqueda" aria-label="Search" name="buscar" id="searchInput">
                    <button class="btn btn-outline-success" type="submit">Buscar</button>
                </div>

                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="busqueda" id="id" value="id">
                        <label class="form-check-label" for="id">id</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="busqueda" id="titulo" value="titulo" checked>
                        <label class="form-check-label" for="titulo">titulo</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="busqueda" id="artista" value="artista">
                        <label class="form-check-label" for="artista">artista</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="busqueda" id="tono" value="tono">
                        <label class="form-check-label" for="tono">tono</label>
                    </div>
                </div>
            </form>
        </div>
    </nav>

    {{!-- Tabla de Canciones --}}

    <table class="table container" >
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Artista</th>
                    <th scope="col">Tono</th>
                </tr>
            </thead>
            <tbody>

                {{#each canciones}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this.titulo}}</td>
                    <td>{{this.artista}}</td>
                    <td>{{this.tono}}</td>
                </tr>
                {{/each}}
            </tbody>
    </table>


{{>script}}
</body>
</html>